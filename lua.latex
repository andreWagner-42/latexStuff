\begin{luacode*}
  function format(x)
    local str = string.gsub(string.format("%.4g", x), "e%+?(%-?)0*(%d*)", "\\cdot10^{%1%2}")
    return str
  end
\end{luacode*}
\def\bind#1#2{\luadirect{#1 = #2}\get{#1}}
\def\binda#1#2{\luadirect{#1 = #2}\geta{#1}}
\def\get#1{\luadirect{tex.print(format(#1))}}
\def\geta#1{\luadirect{tex.print(#1)}}
